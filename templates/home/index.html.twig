{% extends 'base.html.twig' %}

{% block title %}Under Construction{% endblock %}

{% block body %}

<div class="container">
    <p><em>Den Lasso-Chroniken werden gerade ein Platz im interweb erstellt. Haben Sie bitte etwas Geduld.</em></p>
    <h1>Articles</h1>
    {% for article in articles %}
        <h2>{{ article.title | raw }}</h2>
        <p>{{ article.content | raw }}</p>
        {% for img in article.images %}
            <img width="320px" src="{{ vich_uploader_asset(img, 'file') }}" alt="{{ img.fileName }}" />
            <p>{{ img.description }}</p>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}
