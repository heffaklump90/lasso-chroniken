<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid m-3 p-2">
            <div class="row">
                <div class="col-md-2">
                    <img src="{{asset('build/img/Lasso.png') }}" width="128px">
                </div>
                <div class="col-md-10 align-self-md-end">
                    <span class="sitebanner">Die Lasso-Chroniken</span>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('articles') }}">Articles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('strava_test_api') }}">API - Test</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
